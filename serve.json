{
  "public": "build",
  "rewrites": [
    {
      "source": "**",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "**/*.@(js|css)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "max-age=31536000"
        }
      ]
    },
    {
      "source": "**/*.@(jpg|jpeg|png|gif|ico|svg)",
      "headers": [
        {
          "key": "Cache-Control", 
          "value": "max-age=31536000"
        }
      ]
    }
  ]
}
